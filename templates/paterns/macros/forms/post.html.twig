{% macro post(form, button, options = []) %}
    <div class="container" style="margin-top: 3%;">
        <h4>{{ button }}</h4>
        {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.content) }}

        {% if options.post is defined %}
            {% if options.post.filename|length > 0 %}
                <img style="width: 20%; margin: 0 auto; display: block;" src="{{ vich_uploader_asset(options.post, 'imageFile') }}" alt="Profil picture ~ {{ options.post.title }}">
            {% endif %}
            {{ form_row(form.imageFile) }}<br>
        {% endif %}

        {% if form.idCategory is defined %}
            {{ form_row(form.idCategory) }}
        {% endif %}

        <br><button class="btn waves-effect waves-light blue lighten-2">{{ button }}</button><br>
        {{ form_end(form) }}
    </div>
{% endmacro %}