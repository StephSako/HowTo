        {{ form_start(form) }}

        <img style="width: 20%; margin: 0 auto; display: block;" src="{{ vich_uploader_asset(user, 'imageFile') }}" alt="Profil picture ~ {{ user.lastname ~ ' ' ~ user.firstname }}">

        {{ form_row(form.imageFile) }}

