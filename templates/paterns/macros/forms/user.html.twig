{% macro new(form, user, label_btn) %}
    <div class="container" style="margin-top: 3%;">
        <h4>{{ label_btn }}</h4>
        {{ form_start(form) }}

        {{ form_row(form.imageFile) }}

        <div class="row">
            <div class="col s6">
                {{ form_row(form.firstname) }}
            </div>
            <div class="col s6">
                {{ form_row(form.lastname) }}
            </div>
        </div>

        {{ form_row(form.mail) }}
        {{ form_row(form.password) }}

        <br><button class="btn waves-effect waves-light light-blue darken-1">{{ label_btn }}</button>
        {{ form_end(form) }}

        <a href="{{ path('connexion') }}">
            <button class="btn waves-effect waves-teal btn-flat purple lighten-5">Se connecter</button>
        </a>
        <br>
        <a href="{{ path('home.tutorials') }}">
            <button class="btn waves-effect waves-light center">Retour Ã  l'accueil</button>
        </a>
    </div>
{% endmacro %}

{% macro editAdmin(form, user, label_btn) %}
