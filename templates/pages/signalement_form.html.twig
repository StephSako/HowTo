{% extends 'paterns/base.html.twig' %}

{% if tutorial is defined %}
    {% set post = tutorial %}
{% elseif forum is defined %}
    {% set post = forum %}
{% endif %}

{% block title %}
    Signaler {{ post.title }}
{%  endblock %}

{% block body %}

    <div class="coloredcard container red lighten-3">
        <h5>Motif de signalement pour<br><b>{{ post.title }}</b> de <b>{{ post.idUser.firstname ~ ' ' ~ post.idUser.lastname }}</b></h5>

        {{ form_start(form) }}
            {{ form_row(form.idReportingLabel) }}
        <button class="btn waves-effect waves-light blue lighten-2">Signaler</button>
        {{ form_end(form) }}
    </div>

{% endblock %}